<br>

<h1>Search by Superhero Name:</h1>

<%= form_tag superheros_path, method: :post do %>
<p> 
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
</p>
<% end %>

<% if @bad_search == 1 %>
    <h2>Your search did not return any results.</h2> 
    <h2>Please choose another Superhero.</h2> 
<% end %>

<% if @bad_search == 0 %>
    <h1>Here Are Your Search Results:</h1>
    <% @found_superheros.each do |superhero| %>
        <%= link_to superhero.name_and_alter, superhero_path(superhero) %><br>
    <% end %>
<% end %>
<% if @current_user.is_premium == false %>
<iframe width="731" height="489" src="https://www.youtube.com/embed/8rwPovyR9HY" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
<% end %>   


<br>

<h1>List of Searched Superheroes:</h1>

<% @superheros.each do |superhero| %>
    <%= link_to superhero.name_and_alter, superhero_path(superhero) %><br>
<% end %>

