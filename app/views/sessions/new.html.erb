<h1 style="font-family:avenir; font-size:40px;">Login</h1><br>

<% if flash[:errors] %>
<h2><%= flash[:errors] %></h2>
<% end %>
<%= form_tag new_session_path do %>
  <%= label_tag :username %><br>
  <%= text_field_tag :username %><br>
  
  <%= label_tag :password %><br>
  <%= password_field_tag :password %>
  <br><br>
  <%= submit_tag 'Login' %>
<% end %>
<p></p><br>
<h2> New to SuperHire? </h2>
<h2><%= link_to "Create an Account", new_user_path %></h2>